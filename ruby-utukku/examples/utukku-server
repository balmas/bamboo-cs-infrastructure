require 'rubygems'
require 'utukku/server'

Utukku::Server.new do 
  port 3000
  accepted_domains ["*"]

  logging do
    outputters = Log4r::Outputter.stderr
    level = Log4r::ERROR
  end

  namespace 'http://www.example.com/echo/1.0#' do
    singular
    round_robin
    deny_from_all
    allow_from [ '127.0.0.1' ]
  end
end
